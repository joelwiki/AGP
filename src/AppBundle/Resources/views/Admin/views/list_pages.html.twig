{% extends "@App/Admin/views/layout.html.twig" %}

{% block content %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Pages
            <small>Liste des pages</small>
        </h1>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">
        <div class="box box-primary">
            <div class="box-header list-header">
                <h3 class="box-title">Pages</h3>

                <div class="box-tools">
                    <div class="input-group input-group-sm" style="width: 250px;">
                        <input type="text" id="system-search" name="table_search" class="form-control pull-right"
                               placeholder="Rechercher dans les articles">
                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
                <div class="hr"></div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-striped list-table list-users">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Titre</th>
                        <th>Contenu</th>
                        <th>Date de publication</th>
                        {% if is_granted('ROLE_MEMBRE_CA') %}
                            <th>Actions</th>
                        {% endif %}
                    </tr>
                    </thead>
                    <tbody>
                    {% for key, page in pages %}
                        <tr>
                            <td>{{ page.id }}</td>
                            <td>
                                <a href="{{ path('agp_show_page', {'slug' : page.slug}) }}">{{ page.title }}</a>
                            </td>
                            <td>{{ page.content|striptags|slice(0, 95)|raw }}</a></td>
                            <td>{{ page.datePublished|date('d') }} {{ page.datePublished|date('F') | trans }} {{ page.datePublished|date('Y') }}</td>
                            {% if is_granted('ROLE_MEMBRE_CA') %}
                                <td>
                                    <a href="{{ path('agp_edit_page', {'id' : page.id}) }}" title="Editer l'article">Editer</a> |
                                    <a href="{{ path('agp_delete_page', {'id' : page.id}) }}" title="Supprimer l'article">Supprimer</a>
                                </td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
    </section>
    <!-- /.content -->
{% endblock %}
