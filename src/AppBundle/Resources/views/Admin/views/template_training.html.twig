<!-- Main content -->
<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary box-padding">
                <div>
                    <h2 class="page-header">
                        <img src="{{ asset('img/training-black.png') }}" class="training-icon margin-r-10">
                        {% if training.id is defined %}
                            Modifier l'entraînement
                        {% else %}
                            Nouvel entraînement
                        {% endif %}
                    </h2>
                </div>
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-12">
                        <h3>Informations</h3>
                        {{ form_label(form.trainingLocation) }}
                        <div>{{ form_widget(form.trainingLocation) }}</div>
                        {{ form_label(form.trainingType) }}
                        <div>{{ form_widget(form.trainingType) }}</div>
                        <div class="form-group">
                            {{ form_label(form.date) }}

                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                {% if training.id is defined %}
                                    {{ form_widget(form.date, {'value' : training.date|date('d/m/Y')}) }}
                                {% else %}
                                    {{ form_widget(form.date) }}
                                {% endif %}
                            </div>
                            <!-- /.input group -->
                        </div>

                        {{ form_label(form.info) }}
                        <div>{{ form_widget(form.info) }}</div>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-md-12 text-center">
                        {% if training.id is defined %}
                        <div>{{ form_widget(form.submit, {'label' : 'Modifier l\'entraînement'}) }}</div>
                        {% else %}
                        <div>{{ form_widget(form.submit, {'label' : 'Ajouter l\'entraînement'}) }}</div>
                        {% endif %}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</section>
<!-- /.content -->