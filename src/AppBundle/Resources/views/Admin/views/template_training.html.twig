<!-- Main content -->
<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary box-padding">
                <div>
                    <h2 class="page-header"><img src="{{ asset('img/training-black.png') }}" class="training-icon margin-r-10">Nouvel entraînement</h2>
                </div>
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-7">
                        <h3>Localisation</h3>
                        <div id="map"></div>
                        <div id="infowindow-content">
                            <span id="place-name"  class="title"></span><br>
                            <span id="place-address"></span>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                {{ form_label(form.location) }}
                                <div>{{ form_widget(form.location) }}</div>
                            </div>
                            <div class="col-md-6">
                                {{ form_label(form.lat) }}
                                <div>{{ form_widget(form.lat) }}</div>
                            </div>
                            <div class="col-md-6">
                                {{ form_label(form.lat) }}
                                <div>{{ form_widget(form.lng) }}</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <h3>Informations</h3>
                        {{ form_label(form.image) }}
                        <div>{{ form_widget(form.image) }}</div>
                        {{ form_label(form.trainingType) }}
                        <div>{{ form_widget(form.trainingType) }}</div>
                        <div class="form-group">
                            {{ form_label(form.date) }}

                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                {{ form_widget(form.date) }}
                            </div>
                            <!-- /.input group -->
                        </div>
                        {{ form_label(form.info) }}
                        <div>{{ form_widget(form.info) }}</div>

                        {{ form_widget(form.limitedPlaces) }}
                        {{ form_label(form.limitedPlaces) }}

                        <div>
                            <div>{{ form_label(form.places) }}</div>
                            {{ form_widget(form.places) }}
                        </div>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-md-12 text-center">
                        {% if training.id is defined %}
                        <div>{{ form_widget(form.submit, {'label' : 'Modifier l\'entraînement'}) }}</div>
                        {% else %}
                        <div>{{ form_widget(form.submit, {'label' : 'Ajouter l\'entraînement'}) }}</div>
                        {% endif %}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</section>
<!-- /.content -->