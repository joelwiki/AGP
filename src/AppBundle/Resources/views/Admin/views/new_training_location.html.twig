{% extends "@App/Admin/views/layout.html.twig" %}

{% block content %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Entraînement
            <small>Ajouter un lieu d'entraînement</small>
        </h1>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary box-padding">
                    <div>
                        <h2 class="page-header"><i class="fa fa-map-marker margin-r-15" aria-hidden="true"></i>Nouveau lieu</h2>
                    </div>
                    <div>
                        {{ form_start(form) }}
                        <div>
                            {{ form_row(form.image) }}
                        </div>
                        <div>
                            {{ form_row(form.location) }}
                        </div>
                        <div class="training-location-submit">
                            {{ form_row(form.submit) }}
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
{% endblock %}
