{% extends "@App/Admin/views/layout.html.twig" %}

{% block title %}{{ parent() }} - Trombinoscope{% endblock %}

{% block content %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Trombinoscope
        </h1>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">
        <div class="box box-primary">
            <div class="box-header list-header">
                <h3 class="box-title">Membres</h3>

                <div class="box-tools">
                    <div class="input-group input-group-sm" style="width: 250px;">
                        <input type="text" id="system-search" name="table_search" class="form-control pull-right" placeholder="Rechercher dans les membres">
                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
                <div class="hr"></div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">

                    <table class="table list-table list-trombinoscope">
                        {% for key, user in users %}
                            {% if user.dossier is not null and user.dossier.enabled == 1 %}
                                <tr class="col-md-3">
                                    <td class="box box-primary">
                                        <a href="{{ path('agp_show_user', {'id' : user.id}) }}">
                                            {% if user.dossier.image is defined %}
                                                <img src="{{ asset('uploads/dossier/image/image-' ~ user.dossier.uniqueId ~ '.' ~ user.dossier.image.extension ~ '') }}" class="img-responsive img-circle img-trombinoscope"/>
                                            {% else %}
                                                <img src="{{ asset('img/no-user.png') }}" class="img-responsive img-circle img-trombinoscope"/>
                                            {% endif %}
                                            <div class="text-center trombinoscope-name">{{ user.firstName }} {{ user.lastName }}</div>
                                        </a>
                                        <div class="text-center trombinoscope-emergency">{{ user.dossier.emergencyContactRelation }} : {{ user.dossier.emergencyContactPhone }}</div>
                                    </td>
                                </tr>
                            {% endif %}
                        {% endfor %}
                    </table>
            </div>
            <!-- /.box-body -->
        </div>
    </section>
    <!-- /.content -->
{% endblock %}
