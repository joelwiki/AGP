{% extends "@App/App/views/layout.html.twig" %}

{% block title %}{{ parent() }} - Initiations{% endblock %}

{% block content %}
    {{ include('@App/App/views/page_header.html.twig') }}
    <div class="container-fluid main-content news">
        <div class="row">
            <div class="container">
                <div class="col-md-12">
                    <h2 class="page-header">
                        Initiations
                    </h2>
                </div>
                <div class="col-md-12">
                    <div class="row">
                        {% for keys, initiation in initiations %}
                            <div class="col-md-4">
                                <div class="single-initiation">
                                    <div class="single-initiation-image">
                                        <a href="{{ path('agp_index') }}initiation/{{ initiation.uniqueId }}/show">
                                            <img src="{{ asset('img/initiation-img.png') }}" class="img-responsive"/>
                                        </a>
                                    </div>
                                    <div class="single-initiation-body">
                                        <div class="single-initiation-meta">
                                            <a href="{{ path('agp_index') }}initiation/{{ initiation.uniqueId }}/show">
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <div class="single-initiation-date inline-block">
                                                        <div class="single-initiation-date-day">{{ initiation.date|date('d') }}</div>
                                                        <div class="single-initiation-date-month">{{ initiation.date|date('M')|trans }}</div>
                                                    </div>
                                                </div>
                                                <div class="col-md-9">
                                                    <div class="single-initiation-title inline-block">{{ initiation.title }}</div>
                                                </div>
                                            </div>
                                            </a>
                                        </div>
                                        <div class="single-initiation-sep"></div>
                                        <div class="single-initiation-content">{{ initiation.content|striptags|slice(0, 235) }}...</div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="fb-root"></div>
    <script>(function(d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = 'https://connect.facebook.net/fr_FR/sdk.js#xfbml=1&version=v2.12';
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>
{% endblock %}
