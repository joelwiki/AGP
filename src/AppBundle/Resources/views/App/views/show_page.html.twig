{% extends "@App/App/views/layout.html.twig" %}

{% block title %}{{ parent() }} - {{ page.title }}{% endblock %}

{% block content %}
    <div class="container-fluid main-content">
        <div class="row">
            <section class="page header" style="background: url('{{ asset('uploads/global/header-' ~ global.id ~ '.png') }}') center">
                <div class="overlay"></div>
                <div class="header-title">Association Grenobloise de Parkour</div>
                <div class="header-subtitle">
                    Accumsan feugiat mi commodo erat lorem ipsum, sed magna<br>
                    lobortis feugiat sapien sed etiam volutpat accumsan.
                </div>
            </section>
            <div class="container">
                <div class="col-md-12">
                    <div class="page">
                        {% if page.image is not null %}
                            <img src="{{ asset('/uploads/page/') }}page-{{ page.uniqueId }}.{{ page.image.extension }}" class="img-responsive mar-auto"/>
                        {% endif %}
                        <div class="page-content">
                            <h2>{{ page.title }}</h2>
                            <p>{{ page.content|raw }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}