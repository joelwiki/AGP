{% extends "@App/App/views/layout.html.twig" %}

{% block title %}{{ parent() }} - {{ article.title }}{% endblock %}

{% block content %}
    <div class="container-fluid main-content">
        <div class="row">
            <section class="page header" style="background: url('{{ asset('uploads/global/header-' ~ global.id ~ '.png') }}') center">
                <div class="overlay"></div>
                <div class="header-title">Association Grenobloise de Parkour</div>
                <div class="header-subtitle">
                    Accumsan feugiat mi commodo erat lorem ipsum, sed magna<br>
                    lobortis feugiat sapien sed etiam volutpat accumsan.
                </div>
            </section>
            <div class="container">
                <div class="article">
                    <div class="row">
                        <div class="col-md-12">
                            {% if article.image is not null %}
                                <img src="{{ asset('/uploads/article/') }}article-{{ article.uniqueId }}.{{ article.image.extension }}" class="img-responsive mar-auto article-header-img"/>
                            {% endif %}
                            <div class="article-content">
                                <h2>{{ article.title }}</h2>
                                <p>{{ article.content|raw }}</p>
                            </div>
                        </div>
                    </div>
                    <div class="article-end"></div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        $(".article-content img").each(function () {
            if ($(this).css("float") === "right") {
                $(this).addClass("img-mar-right");
            }

            if ($(this).css("float") === "left") {
                $(this).addClass("img-mar-left");
            }
        })
    </script>
{% endblock %}