{% extends "@App/App/views/layout.html.twig" %}

{% block title %}{{ parent() }} - {{ article.title }}{% endblock %}

{% block content %}
    <div class="container-fluid main-content article-page">
        <div class="row">
            {{ include('@App/App/views/page_header.html.twig') }}
            <div class="container">
                <div class="article">
                    <div class="row article-row">
                        <div class="col-md-12">
                            {% if article.image is not null %}
                                <img src="{{ asset('/uploads/article/') }}article-{{ article.uniqueId }}.{{ article.image.extension }}" class="img-responsive mar-auto article-header-img"/>
                            {% endif %}
                            <div class="article-meta">
                                <div><i class="fa fa-user"></i> {{ article.author }} <span class="vertical-sep">|</span> <i class="fa fa-calendar"></i> {{ article.datePublished|date('d/m/Y') }}</div>
                                <div class="article-start"></div>
                            </div>
                            <div class="article-content">
                                <h2>{{ article.title }}</h2>
                                <p>{{ article.content|raw }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        $(".article-content img").each(function () {
            if ($(this).css("float") === "right") {
                $(this).addClass("img-mar-right");
            }

            if ($(this).css("float") === "left") {
                $(this).addClass("img-mar-left");
            }
        })
    </script>
{% endblock %}