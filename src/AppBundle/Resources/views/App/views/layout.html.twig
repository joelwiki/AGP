{% extends '@App/App/base.html.twig' %}

{% block body %}
    <nav class="navbar navbar-fixed-top main-navbar">
        <div class="main-navbar-container">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#agp-collapse" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('agp_index') }}">{{ global.siteName }}</a>
                </div>

                <div class="collapse navbar-collapse" id="agp-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li class="active"><a href="{{ path('agp_index') }}">Accueil</a></li>
                        <li><a href="{{ path('agp_news') }}">News</a></li>
                        <li><a href="{{ path('agp_register_page') }}">Inscriptions</a></li>
                        <li><a href="{{ path('agp_initiations') }}">Initiations</a></li>
                        <li><a href="{{ path('agp_trainings') }}">Entraînements</a></li>
                        <li><a href="https://www.parkour-grenoble.fr/forum/" target="_blank">Forum</a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">A propos <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="{{ path('agp_infos_page') }}">Informations</a></li>
                                <li><a href="{{ path('agp_partners_page') }}">Partenaires</a></li>
                                <li><a href="{{ path('agp_contact_page') }}">Contact</a></li>
                            </ul>
                        </li>
                        {% if app.user.id is defined %}
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ app.user.username }} <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="{{ path('agp_dashboard') }}">Tableau de bord</a></li>
                                    <li><a href="{{ path('agp_show_profile') }}">Profil</a></li>
                                    <li role="separator" class="divider"></li>
                                    <li><a href="{{ path('agp_index') }}logout">Déconnexion</a></li>
                                </ul>
                            </li>
                        {% else %}
                            <li><a href="{{ path('agp_login') }}">Connexion</a></li>
                        {% endif %}
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </div>
    </nav>
    {% block content %}{% endblock %}
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="footer-links">
                        <div class="col-md-3">
                            <a href="{{ path('agp_about_page') }}">
                                A propos
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="{{ path('agp_contact_page') }}">
                                Contact
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="{{ path('agp_infos_page') }}">
                                Informations
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="{{ path('agp_terms_page') }}">
                                Conditions d'utilisation
                            </a>
                        </div>
                    </div>
                    <hr>
                    <div class="copyright text-center">
                        <div>Parkour Grenoble - AGP</div>
                        <div>© 2006 - {{ "now"|date("Y") }}</div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
{% endblock %}